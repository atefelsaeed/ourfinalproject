<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".cropsdept">

    <include layout="@layout/back_and_menu_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/vegtablesdept"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:background="@drawable/vegtablesdept"
            android:layout_marginLeft="15dp"
            android:onClick="gotovegetables"/>

        <Button
            android:id="@+id/fruitsdept"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:background="@drawable/fruitsdept"
            android:layout_marginLeft="20dp"
            android:onClick="gotofruits"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/oilcropsdep"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:background="@drawable/oilcropsdep"
            android:layout_marginLeft="15dp"
            android:onClick="gotovegetables"/>

        <Button
            android:id="@+id/fieldcropsdept"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:background="@drawable/fielcropsdept"
            android:layout_marginLeft="20dp"
            android:onClick="gotofruits"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/sugarcropsdep"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:background="@drawable/sugarcropsdep"
            android:layout_marginLeft="15dp"
            android:onClick="gotovegetables"/>

        <Button
            android:id="@+id/feedcropsdep"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:background="@drawable/feedcropsdep"
            android:layout_marginLeft="20dp"
            android:onClick="gotofruits"/>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/blightbtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectblight"
            android:onClick="gotoblight" />

        <Button
            android:id="@+id/gatebtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectgate"
            android:onClick="gotoknowlegegate" />

        <Button
            android:id="@+id/guid"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rectstillguid"
            android:onClick="gotocropsdept" />

        <Button
            android:id="@+id/homebtn2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/recthome"
            android:onClick="gotohome" />
    </LinearLayout>


</RelativeLayout>